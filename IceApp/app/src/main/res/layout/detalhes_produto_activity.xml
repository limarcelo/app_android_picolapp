<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:background="#BBDEFB"
    android:paddingLeft="0dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_produto_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardElevation="12dp"
        android:background="@color/navigationBarColor"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:paddingTop="0dp"
            android:background="@color/cardview_light_background"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/detalhe_img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_marginRight="40dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/ib_add_carrinho"
        android:background="@drawable/oval"
        android:elevation="20dp"
        android:layout_marginBottom="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/card_produto_img"
        android:src="@mipmap/add_shop"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_detalhe"
        android:layout_below="@id/card_produto_img"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="250dp"
        card_view:cardElevation="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="7dp"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/windowBackground"
                android:id="@+id/detalhe_tv_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="6dp"
                android:layout_below="@+id/detalhe_tv_descricao"
                android:id="@+id/view"
                android:background="#BBDEFB"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>

            <TextView
                android:layout_below="@+id/view"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/windowBackground"
                android:id="@+id/detalhe_obs"
                android:layout_width="match_parent"
                android:layout_height="55dp" />

            <View
                android:layout_marginTop="6dp"
                android:layout_below="@+id/detalhe_obs"
                android:id="@+id/view2"
                android:background="#BBDEFB"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>

            <TextView
                android:textColor="@color/windowBackground"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:textSize="13dp"
                android:text="Informe a quantidade que deseja adicionar:"
                android:id="@+id/tv_qtd"
                android:layout_below="@id/detalhe_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="@color/windowBackground"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:numeric="integer"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:id="@+id/ed_qtd"
                android:layout_below="@id/tv_qtd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/ed_qtd"
                android:layout_marginTop="7dp"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="@color/windowBackground"
                android:id="@+id/tv_preco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>