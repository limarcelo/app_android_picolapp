<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_pedido"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="8dp"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@color/colorPrimaryLight">

        <RelativeLayout
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/navigationBarColor"
            android:textSize="14dp"
            android:text="Meu Pedido: "
            android:id="@+id/tv_codigo_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/navigationBarColor"
                android:textSize="14dp"
                android:layout_toRightOf="@id/tv_codigo_pedido"
                android:id="@+id/tv_codigo_pedidoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/navigationBarColor"
            android:textSize="14dp"
            android:layout_below="@id/tv_codigo_pedido"
            android:text="Status: "
            android:id="@+id/tv_status_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/navigationBarColor"
                android:textSize="14dp"
                android:layout_below="@id/tv_codigo_pedidoData"
                android:layout_toRightOf="@id/tv_status_pedido"
                android:id="@+id/tv_status_pedidoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/navigationBarColor"
            android:textSize="14dp"
            android:layout_below="@id/tv_status_pedido"
            android:text="Quantidade de itens: "
            android:id="@+id/tv_qtd_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/navigationBarColor"
                android:textSize="14dp"
                android:layout_below="@id/tv_status_pedido"
                android:layout_toRightOf="@id/tv_qtd_pedido"
                android:id="@+id/tv_qtd_pedidoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/navigationBarColor"
            android:textSize="14dp"
            android:layout_below="@id/tv_qtd_pedido"
            android:text="Total: R$ "
            android:id="@+id/tv_total_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/navigationBarColor"
                android:textSize="14dp"
                android:layout_below="@id/tv_qtd_pedido"
                android:layout_toRightOf="@id/tv_total_pedido"
                android:id="@+id/tv_total_pedidoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/navigationBarColor"
            android:textSize="14dp"
            android:layout_below="@id/tv_total_pedido"
            android:text="Forma de pagamento: "
            android:id="@+id/tv_tipo_pagamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/navigationBarColor"
                android:textSize="14dp"
                android:layout_below="@id/tv_total_pedido"
                android:layout_toRightOf="@id/tv_tipo_pagamento"
                android:id="@+id/tv_tipo_pagamentoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>