<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" >

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/img_item_carrinho"
        android:layout_width="87dp"
        android:layout_height="87dp" />

    <TextView
        android:textColor="@color/navigationBarColor"
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/img_item_carrinho"
        android:id="@+id/tv_descricao_item_carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:text="Quantidade: "
        android:layout_below="@+id/tv_descricao_item_carrinho"
        android:layout_toRightOf="@id/img_item_carrinho"
        android:id="@+id/tv_quantidade_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/tv_quantidade_item"
        android:layout_below="@id/tv_descricao_item_carrinho"
        android:id="@+id/tv_qtd_item_carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:text="Valor: R$ "
        android:layout_below="@+id/tv_quantidade_item"
        android:layout_toRightOf="@id/img_item_carrinho"
        android:id="@+id/tv_valor_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16dp"
        android:layout_toRightOf="@id/tv_valor_item"
        android:layout_below="@id/tv_qtd_item_carrinho"
        android:id="@+id/tv_valor_item_carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View android:layout_below="@id/tv_valor_item_carrinho"
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></View>

    <ImageButton
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ib_delete"
        android:background="@drawable/oval2"
        android:src="@mipmap/delete"/>

</RelativeLayout>