<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#1A237E"
    tools:context="br.com.projetofinal.iceapp.autentication.CadastroActivity">

    <TextView
        android:layout_marginTop="6dp"
        android:gravity="left"
        android:id="@+id/tv_titulo"
        android:text="Criar Conta"
        android:textSize="26sp"
        android:textColor="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <View

        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/line"
        android:background="@color/navigationBarColor"
        android:layout_below="@id/tv_titulo"/>

    <EditText
        android:layout_below="@id/line"
        android:layout_marginTop="6dp"
        android:gravity="left"
        android:id="@+id/et_nome_cadastro"
        android:hint="Informe seu nome:"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@id/et_nome_cadastro"
        android:layout_marginTop="6dp"
        android:gravity="left"
        android:id="@+id/et_email_cadastro"
        android:hint="Informe seu email:"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_marginLeft="4dp"
        android:textColor="@color/colorPrimary"
        android:text="Informe o setor:"
        android:layout_below="@id/et_email_cadastro"
        android:id="@+id/tv_titulodd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_titulodd"
        android:layout_below="@id/et_email_cadastro"
        android:id="@+id/setor"
        android:layout_width="1800dp"
        android:layout_height="18dp" />

    <TextView
        android:layout_below="@id/setor"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:id="@+id/tv_seguranca"
        android:text="SeguranÃ§a"
        android:textSize="26sp"
        android:textColor="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View

        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/line2"
        android:background="@color/navigationBarColor"
        android:layout_below="@id/tv_seguranca"/>

    <EditText
        android:inputType="textPassword"
        android:layout_below="@id/line2"
        android:layout_marginTop="6dp"
        android:gravity="left"
        android:id="@+id/et_pwCadastro"
        android:hint="Escolha uma senha:"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/windowBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginLeft="8dp"
        android:inputType="textPassword"
        android:layout_below="@id/line2"
        android:layout_toRightOf="@id/et_pwCadastro"
        android:layout_marginTop="6dp"
        android:gravity="left"
        android:id="@+id/et_pwCadastro2"
        android:hint="Confirme sua senha:"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/windowBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="10dp"
        android:textColor="@color/windowBackground"
        android:background="#00C853"
        android:id="@+id/btn_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Cadastro"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
