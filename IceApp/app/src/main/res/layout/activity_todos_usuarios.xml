<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:layout_centerHorizontal="true"
    >

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:textColor="@color/navigationBarColor"
        android:text="Nome do cliente: "
        android:id="@+id/tv_nome_cliente_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_nome_cliente_cr"
            android:id="@+id/tv_nome_cliente_crData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="35dp"
        android:textColor="@color/navigationBarColor"
        android:layout_below="@+id/tv_nome_cliente_cr"
        android:text="Setor: "
        android:id="@+id/tv_setor_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/tv_setor_cr"
            android:layout_below="@+id/tv_nome_cliente_cr"
            android:id="@+id/tv_setor_crData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="35dp"
        android:textColor="@color/navigationBarColor"
        android:layout_below="@+id/tv_setor_cr"
        android:text="Email: "
        android:id="@+id/tv_email_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/tv_email_cr"
            android:layout_below="@+id/tv_setor_cr"
            android:id="@+id/tv_email_crData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_cr"
        android:layout_below="@id/tv_email_cr"
        android:background="@color/primary"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="35dp"></View>

</RelativeLayout>