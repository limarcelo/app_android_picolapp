<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="br.com.projetofinal.iceapp.autentication.CadastroActivity">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:background="@mipmap/icon"
        android:layout_width="400px"
        android:layout_height="400px" />


    <TextView
        android:layout_below="@id/logo"
        android:gravity="center"
        android:id="@+id/tv_name"
        android:text="PicolApp"
        android:textSize="26sp"
        android:textColor="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColorHint="#BDBDBD"
        android:textColor="@color/windowBackground"
        android:textAlignment="textStart"
        android:layout_marginTop="24dp"
        android:layout_below="@id/tv_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu email..."
        android:id="@+id/ed_email"
        />

    <EditText
        android:textColorHint="#BDBDBD"
        android:textColor="@color/windowBackground"
        android:gravity="center"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Digite sua senha..."
        android:id="@+id/et_pw"
        android:layout_below="@+id/ed_email" />

    <CheckBox
        android:layout_marginTop="2dp"
        android:textColor="@color/windowBackground"
        android:id="@+id/chkSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_pw"
        android:text="Salvar minhas credenciais" />

    <Button
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/windowBackground"
        android:background="#00C853"
        android:id="@+id/btn_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_below="@id/chkSalvar" />

    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:id="@+id/tv_register"
        android:text="Ainda nÃ£o tem uma conta?"
        android:textSize="14sp"
        android:textColor="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_entrar" />
    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_register2"
        android:text="Registre-se!"
        android:textSize="14sp"
        android:textColor="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_register" />

</RelativeLayout>
