<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.projetofinal.iceapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <activity

            android:name=".activites.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".activites.ProdutoListaActivity" >
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activites.DetalhesProdutoActivity"
            android:label="@string/title_activity_detalhe" >
        </activity>
        <activity
            android:name=".activites.CarrinhoItemActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_carrinho_lista" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".autentication.LoginActivity"
            android:label="PicolApp"
            android:theme="@style/MyMaterialTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:noHistory="true"
            android:name=".autentication.CadastroActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activites.AdmActivity"
            android:label="@string/title_activity_adm"
            android:theme="@style/MyMaterialTheme" >
        </activity>

        <activity
            android:name=".activites.DetalhesPedidoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activites.adm.ContasReceberDetalhe"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>
